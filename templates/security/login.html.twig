        <script
                src="https://kit.fontawesome.com/8f27d68390.js"
                crossorigin="anonymous"
        ></script>
     {% endblock %}




{% block body %}
    <main class="main">
        <div class="container">
            <section class="wrapper">
                <div class="heading">
                    <h1 class="text text-large">Sign In</h1>
                    <p class="text text-normal">New user? <span><a href="{{ path('app_register') }}" class="text text-links">Register</a></span>
                    </p>
                </div>
                <form method="post" class="form" name="signin">
                    {% if error %}
                        {#        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div> #}
                        <div class="alert alert-danger">Wrong Email or Password</div>
                    {% endif %}


                    <div class="input-control">
                        <label for="email" class="input-label" hidden="hidden">Email</label>
                        <input type="email" value="{{ last_username }}" name="email" id="email" class="input-field"
                               autocomplete="email" placeholder="Email Address">
                    </div>

                    <div class="input-control">
                        <label for="password" class="form-label" hidden="hidden">Password</label>
                        <input type="password" name="password" id="password" class="input-field" placeholder="Password">
                    </div>


                    <div class="checkbox mb-3">
                        <label><input type="checkbox" name="_remember_me"> Remember me</label>
                    </div>

                    <div class="input-control">
                        <a href="{{ path('app_forgot_password_request') }}">Forgot your password?</a>
                        <input class="input-submit" type="submit" value="Sign In">
                    </div>
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"><br>


                    {#        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality. #}
                    {#        See https://symfony.com/doc/current/security/remember_me.html #}



                </form>


                <div class="striped">
                    <span class="striped-line"></span>
                    <span class="striped-text">Or</span>
                    <span class="striped-line"></span>
                </div>
                <div class="method">
                    <div class="method-control">
                        <a href="#" class="method-action">
                            <span>Sign in with Google</span>
                            <ion-icon name="logo-google"></ion-icon>

                        </a>
                    </div>
                    <div class="method-control">
                        <a href="#" class="method-action">
                            <span>Sign in with Facebook</span>
                            <ion-icon name="logo-facebook"></ion-icon>

                        </a>
                    </div>
                </div>
            </section>
        </div>
    </main>
{% endblock %}
