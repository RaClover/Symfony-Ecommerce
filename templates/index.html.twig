{% block body %}
    <style>

        .sidenav {
            position: absolute;
            height: 56%;
            width:  16rem;
            top: 8rem;
            left: 8rem;
            background: #f5f5f5;
            overflow-x: hidden;
            font-size: 14px;

        }

        .sidenav a {
            padding: 6px 8px 6px 16px;
            text-decoration: none;
            font-size: 18px;
            color: #333333;
            display: block;
        }

        .sidenav a:hover {
            color: #ee7e85;
        }
        img {
            border: 1px solid red ;
            width: 8rem ;
            height: 8rem ;
            margin-left: 3rem;
            border-radius: 60%;
        }

        @media screen and (max-height: 450px) {
            .sidenav {padding-top: 15px;}
            .sidenav a {font-size: 18px;}
        }
    </style>

    <div class="sidenav">


        <div>
            <img src="{{ app.user.image }}" style="">
        </div>
        <div>
            <a href="{{ path('app_user_profile_info') }}">My Account</a>
            <a href="{{ path('app_user_profile_ordersHistory') }}">My Orders</a>
            <a href="{{ path('app_homepage') }}">Go To Website</a>
            <a href="{{ path('app_logout') }}">Logout</a>
        </div>

    </div>



{% endblock %}

