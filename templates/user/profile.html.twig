{% include 'header.html.twig' %}
{% include 'index.html.twig' %}


{% block body %}
    <!-- Page Content  -->


    <section id="content" class="p-4 p-md-5" style="margin-left: 25rem">

        <h2 class="mb-4">Account Information</h2>
        <div class="col-md-8">
            <div class="tab-content profile-tab" id="myTabContent">
                <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                    <div class="row" style="border-bottom: 1px gray solid">
                        <div class="col-md-6">
                            <label>FirstName</label>
                        </div>
                        <div class="col-md-6">
                            <p>{{ app.user.firstName }}</p>
                        </div>
                    </div>


                    <div class="row" style="border-bottom: 1px gray solid">
                        <div class="col-md-6">
                            <label>LastName</label>
                        </div>
                        <div class="col-md-6">
                            <p>{{ app.user.lastName }}</p>
                        </div>
                    </div>


                    <div class="row" style="border-bottom: 1px gray solid">
                        <div class="col-md-6">
                            <label>Email</label>
                        </div>
                        <div class="col-md-6">
                            <p>{{ app.user.email }}</p>
                        </div>
                    </div>
                    <div class="row" style="border-bottom: 1px gray solid">
                        <div class="col-md-6">
                            <label>Country</label>
                        </div>
                        <div class="col-md-6">
                            <p>{{ app.user.country }}</p>
                        </div>
                    </div>
                    <div class="row" style="border-bottom: 1px gray solid">
                        <div class="col-md-6">
                            <label>City</label>
                        </div>
                        <div class="col-md-6">
                            <p>{{ app.user.city }}</p>
                        </div>
                    </div>


                    <div class="row" style="border-bottom: 1px gray solid">
                        <div class="col-md-6">
                            <label>StreetAddress</label>
                        </div>
                        <div class="col-md-6">
                            <p>{{ app.user.stAddress }}</p>
                        </div>
                    </div>


                    <div class="row" style="border-bottom: 1px gray solid">
                        <div class="col-md-6">
                           <a href="{{ path('app_user_profile_displayEditPage') }}">Edit</a>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </section>

{% endblock %}


{% block stylesheets %}

{% endblock %}
{% include 'footer.html.twig' %}

